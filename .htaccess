RewriteEngine On
RewriteBase /

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f

RewriteRule ^api/get/posts/list$ api/posts/read.php [L]
RewriteRule ^api/get/posts/info$ api/posts/read_single.php [L]

RewriteRule ^api/post/posts$ api/posts/create.php [L]
RewriteRule ^api/put/posts$ api/posts/update.php [L]
RewriteRule ^api/delete/posts$ api/posts/delete.php [L]